<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <ImageButton
                    android:id="@+id/ib1"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/ic_menu" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="4.9"
                    android:src="@drawable/logo1" />

                <ImageButton
                    android:id="@+id/ib2"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/ic_cart" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"


                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#d6dcea"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:fontFamily="@font/acme"
                        android:text="SHIPPING POLICY"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="@color/royalblue"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginBottom="35dp"
                        android:background="#323232"
                        android:fontFamily="@font/arimo"
                        android:padding="35dp"
                        android:text="@string/shipping_policy"
                        android:textColor="@color/white"
                        android:lineSpacingExtra="10dp"
                        android:letterSpacing="0.1"
                        android:textSize="9sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:text="CONTACT US"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/cornflowerblue"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="25dp"
                        android:autoLink="email"
                        android:clickable="true"
                        android:text="Email: swastika@theswastika.in"
                        android:textColor="@color/darkslategray"
                        android:textColorLink="@color/darkslategray"
                        android:layout_marginBottom="10dp"
                        android:textSize="10sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:autoLink="phone"
                        android:clickable="true"
                        android:text="Phone: +91-9958988758"
                        android:textColor="@color/darkslategray"
                        android:textColorLink="@color/darkslategray"
                        android:layout_marginBottom="10dp"
                        android:textSize="10sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Operating Address: Paramount Symphony, Crossing Republik, Ghaziabad, UP -201016"
                        android:textColor="@color/darkslategray"
                        android:layout_marginBottom="10dp"
                        android:textSize="10sp"
                        android:textStyle="normal" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:text="SUPPORT"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/cornflowerblue"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/shippingp1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="25dp"
                        android:clickable="true"
                        android:text="Shipping Policy"
                        android:textColor="@color/darkslategray"
                        android:textColorLink="@color/darkslategray"
                        android:layout_marginBottom="10dp"
                        android:textSize="10sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/privacyp1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:autoLink="phone"
                        android:clickable="true"
                        android:text="Privacy Policy"
                        android:textColor="@color/darkslategray"
                        android:textColorLink="@color/darkslategray"
                        android:layout_marginBottom="10dp"
                        android:textSize="10sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/refundp1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:autoLink="phone"
                        android:clickable="true"
                        android:text="Refund Policy"
                        android:textColor="@color/darkslategray"
                        android:textColorLink="@color/darkslategray"
                        android:layout_marginBottom="10dp"
                        android:textSize="10sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/ts1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Terms of Service"
                        android:textColor="@color/darkslategray"
                        android:layout_marginBottom="10dp"
                        android:textSize="10sp"
                        android:clickable="true"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:text="ABOUT US"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/cornflowerblue"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/aboutus1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="25dp"
                        android:clickable="true"
                        android:text="About us"
                        android:textColor="@color/darkslategray"
                        android:textColorLink="@color/darkslategray"
                        android:layout_marginBottom="10dp"
                        android:textSize="10sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/contactus1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:autoLink="phone"
                        android:clickable="true"
                        android:text="Contact Us"
                        android:textColor="@color/darkslategray"
                        android:textColorLink="@color/darkslategray"
                        android:layout_marginBottom="10dp"
                        android:textSize="10sp"
                        android:textStyle="normal" />



                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bottom"/>




                </LinearLayout>



            </LinearLayout>

        </ScrollView>

    </LinearLayout>



</LinearLayout>



